@model ProductDto
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
@Html.Partial("_HeadPartialView")
<body>
    @Html.Partial("_HeaderPartialView")
    
   
    <section class="main-content padding-large">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <!-- Main Product Image -->
                    <img src="@Url.Content(@Model.ImageUrls[0])" alt="@Model.Name" class="product-image"
                         style="width: 300px; height: 400px; object-fit: cover; display: block;">
                </div>
                <div class="col-md-6">
                    <div class="product-detail-content">
                        <h2>@Model.Name</h2>
                        <p class="price">€@Model.Price.ToString("0.00")</p>
                        <p>@Model.Description</p>
                        @if (Model.Attributes != null)
{
                         @foreach (var attribute in Model.Attributes)
                    {
                        <div class="product-attribute">
                                <h4>@Html.Raw(attribute.Key)</h4>
                            @foreach (var value in attribute.Value)
                            {
                                <button class="attribute-option btn btn-outline-secondary" data-attribute="attribute.Key" data-value="@value">
                                    @value
                                </button>
                            }
                        </div>
                    }
                    }
                        <div class="add-to-cart">
                            <button type="button" class="btn btn-primary">Add to Cart</button>
                        </div>
                      
                    </div>
                </div>
            </div>
        </div>
    </section>
    <hr />
    @Html.Partial("_FooterPartialView")
    @Html.Partial("_ScriptsPartialView")


</body>
</html>
