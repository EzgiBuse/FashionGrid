@model LoginRequestDto
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
@Html.Partial("_HeadPartialView")
<body>
    @Html.Partial("_HeaderPartialView")
    <hr />
    <div class="container d-flex align-items-center justify-content-center" style="height: 80vh;">
        <!-- Adjusted height for a slightly higher position -->
        <div class="row justify-content-center">
            <div class="col-md-4">
                <!-- Reduced column size for a tighter card -->
                <div class="card shadow" style="padding: 2rem; border-radius: 10px;">
                    <!-- Added border-radius for a square look with rounded corners -->
                    <div class="card-body">
                        <h3 class="card-title text-center mb-4" style="font-weight: 300;">Login</h3>
                        <form asp-controller="Login" asp-action="LoginUser" method="post">
                            <div class="form-group">
                                <label for="emailInput" style="font-weight: bold;">Email </label>
                                <input asp-for="Email" class="form-control" placeholder="Enter your email" style="border-radius: 0.25rem;">
                            </div>
                            <div class="form-group">
                                <label for="passwordInput" style="font-weight: bold;">Password</label>
                                <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" style="border-radius: 0.25rem;">
                            </div>
                            <button type="submit" class="btn btn-primary btn-block" style="background-color: #0056b3; border: none;">Login</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
