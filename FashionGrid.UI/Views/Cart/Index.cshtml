@model CartDto
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
@Html.Partial("_HeadPartialView")
<body>
    @Html.Partial("_HeaderPartialView")

    <section class="shopping-cart">
        <div class="container my-5">
            <div class="card shadow">
                <div class="card-body">
                    <h2 class="text-center my-4">Shopping Cart</h2>
                    <div class="table-responsive">
                        <table class="table table-hover text-center">
                            <thead>
                                <tr>
                                    <th>Product</th>
                                    <th>Price</th>
                                    <th>Quantity</th>
                                    <th>Size/Color</th>
                                    <th>Total</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Items)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center justify-content-center">
                                                <img src="@Url.Content(item.ImageUrl)" alt="@item.Name" style="width: 50px; height: 50px; object-fit: cover; margin-right: 10px;">
                                                @item.Name
                                            </div>
                                        </td>
                                        <td>€@item.Price.ToString("0.00")</td>
                                        <td>
                                            <input type="number" class="form-control" value="@item.Quantity" style="width: 60px; margin: auto;">
                                        </td>
                                        <td>@string.Join(", ", item.Attributes)</td>
                                        <td>€@item.TotalPrice.ToString("0.00")</td>
                                        <td>
                                            <form asp-action="RemoveItem" asp-controller="Cart" method="post">
                                                <input type="hidden" name="cartItemId" value="@item.Id" />
                                                <button type="submit" class="btn btn-danger">Remove</button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th colspan="4" class="text-right">Total:</th>
                                    <th colspan="2">€@Model.TotalPrice.ToString("0.00")</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12 text-center mt-4">
                    <button class="btn btn-primary btn-lg">Proceed to Checkout</button>
                </div>
            </div>
        </div>
    </section>

    <hr />

    @Html.Partial("_FooterPartialView")
    @Html.Partial("_ScriptsPartialView")

</body>
</html>
