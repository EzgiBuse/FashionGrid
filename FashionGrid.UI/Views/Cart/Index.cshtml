@model CartDto
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
@Html.Partial("_HeadPartialView")
<head>
    <style>
        .centered-content {
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .product-img {
            width: 50px;
            height: 50px;
            object-fit: cover;
            margin-right: 10px; /* ensures spacing between image and text */
        }

        .table th, .table td {
            vertical-align: middle;
            text-align: center;
            padding: 0.75rem; /* Adjust padding to ensure consistent vertical alignment */
        }

        .table-responsive {
            overflow-x: auto; /* Allows table to be scrollable horizontally on small devices */
        }

        .control-width {
            width: 60px; /* Smaller input width for quantity to center it better */
            margin: auto; /* Centers the input in its cell */
            display: block; /* Ensures it doesn't stay inline */
        }
    </style>
</head>
<body>
    @Html.Partial("_HeaderPartialView")

    <section class="shopping-cart">
        <div class="container my-5">
            <div class="row justify-content-center">
                <div class="col-lg-10">
                    <div class="card shadow">
                        <div class="card-body">
                            <h2 class="text-center my-4">Shopping Cart</h2>
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>Product</th>
                                            <th>Price</th>
                                            <th>Quantity</th>
                                            <th>Size/Color</th>
                                            <th>Total</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.Items)
                                        {
                                            <tr>
                                                <td class="centered-content">
                                                    <img src="@Url.Content(item.ImageUrl)" alt="@item.Name" class="product-img">
                                                    <span>@item.Name</span>
                                                </td>
                                                <td>€@item.Price.ToString("0.00")</td>
                                                <td>
                                                    <input type="number" class="form-control control-width" value="@item.Quantity">
                                                </td>
                                                <td>@string.Join(", ", item.Attributes)</td>
                                                <td>€@item.TotalPrice.ToString("0.00")</td>
                                                <td>
                                                    <form asp-action="RemoveItem" asp-controller="Cart" method="post">
                                                        <input type="hidden" name="cartItemId" value="@item.Id" />
                                                        <button type="submit" class="btn btn-danger">Remove</button>
                                                    </form>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                    <tfoot>
                                        <tr>
                                            <th colspan="4" class="text-right">Total:</th>
                                            <th colspan="2">€@Model.TotalPrice.ToString("0.00")</th>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="text-center mt-4">
                        <form asp-controller="Payment" asp-action="CreateCheckoutSession" method="post">
                            <button type="submit" class="btn btn-primary btn-lg">Proceed to Checkout</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <hr />

    @Html.Partial("_FooterPartialView")
    @Html.Partial("_ScriptsPartialView")

</body>
</html>
