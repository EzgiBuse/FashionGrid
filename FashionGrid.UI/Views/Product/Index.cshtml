@model List<ProductDto>
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
@Html.Partial("_HeadPartialView")
<body>

  
    @Html.Partial("_HeaderPartialView")
    <hr />
    <div class="shopify-grid">
        <div class="container">
            <div class="row">

                <aside class="col-md-3">
                    <div class="widgets widget-filter">
                        <h5 class="widget-title">Filter Products</h5>
                        <form>
                            <div class="form-group">
                                <label for="category">Category:</label>
                                <select id="category" class="form-control">
                                    <option value="all">All</option>
                                    <option value="men">Men</option>
                                    <option value="women">Women</option>
                                    <option value="kids">Kids</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="priceRange">Price Range:</label>
                                <select id="priceRange" class="form-control">
                                    <option value="0-50">$0 - $50</option>
                                    <option value="51-100">$51 - $100</option>
                                    <option value="101-150">$101 - $150</option>
                                    <option value="150+">$150+</option>
                                </select>
                            </div>
                            <button type="submit" class="btn btn-primary">Apply Filters</button>
                        </form>
                    </div>
                </aside>

                <section id="selling-products" class="col-md-9 product-store">
                    <div class="container">
                        <div class="row mb-3">
                            <div class="col-md-12 d-flex justify-content-between align-items-center">
                                <ul class="tabs list-unstyled">
                                    <li data-tab-target="#all" class="active tab">All</li>
                                    <li data-tab-target="#shoes" class="tab">Shoes</li>
                                    <li data-tab-target="#tshirts" class="tab">Tshirts</li>
                                    <li data-tab-target="#pants" class="tab">Pants</li>
                                    <li data-tab-target="#hoodie" class="tab">Hoodie</li>
                                    <li data-tab-target="#outer" class="tab">Outer</li>
                                    <li data-tab-target="#jackets" class="tab">Jackets</li>
                                    <li data-tab-target="#accessories" class="tab">Accessories</li>
                                </ul>
                                <div class="sorting">
                                    <label for="sortby">Sort by:</label>
                                    <select id="sortby" class="form-control">
                                        <option value="newest">Newest</option>
                                        <option value="price_low_high">Price: Low to High</option>
                                        <option value="price_high_low">Price: High to Low</option>
                                        <option value="popularity">Popularity</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="tab-content">
                            <div id="all" data-tab-content class="active">
                                <div class="row d-flex flex-wrap">
                                    @foreach (var product in Model)
                                    {
                                        <div class="product-item col-lg-4 col-md-6 col-sm-6">
                                            <div class="image-holder">
                                                <img src="@Url.Content(product.ImageUrls[0])" alt="@product.Name" class="product-image"
                                                     style="width: 300px; height: 400px; object-fit: cover; display: block;">
                                            </div>

                                            <div class="product-detail">
                                                <h3 class="product-title">
                                                    <a href="@Url.Action("Index", "ProductDetail", new { id = product.Id })">@product.Name</a>
                                                </h3>
                                                <div class="item-price text-primary">$@product.Price.ToString("N2")</div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                            <!-- Additional tabs content goes here -->
                        </div>
                    </div>
                </section>

            </div>
        </div>
    </div>
    <hr />
    @Html.Partial("_FooterPartialView");
    @Html.Partial("_ScriptsPartialView");
</body>
</html>
