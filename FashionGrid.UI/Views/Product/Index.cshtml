@model List<ProductDto>
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

@Html.Partial("_HeadPartialView");

<body>

    @Html.Partial("_HeaderPartialView");

    <!-- ***** Main Banner Area Start ***** -->
    <div class="page-heading" id="top">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="inner-content">
                        <h2>Check Our Products</h2>
                        <span>Awesome &amp; Creative HTML CSS layout by TemplateMo</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- ***** Main Banner Area End ***** -->
    <!-- ***** Products Area Starts ***** -->
    <section class="section" id="products">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="section-heading">
                        <h2>Our Latest Products</h2>
                        <span>Check out all of our products.</span>
                    </div>
                </div>
            </div>
            <div class="row">
                @foreach (var product in Model)
                {
                    <div class="col-lg-4">
                        <div class="item">
                            <!-- Wrap the entire product display in an <a> tag -->
                            <a asp-controller="Product" asp-action="ProductDetail" asp-route-id="@product.Id" class="product-link">
                                <div class="thumb">
                                    <img src="@product.ImageUrls.FirstOrDefault()" alt="@product.Name">
                                </div>
                                <div class="down-content">
                                    <h4>@product.Name</h4>
                                    <span>$@product.Price.ToString("0.00")</span>
                                </div>
                            </a>

                        </div>
                    </div>
                }

            </div>
        </div>
    </section>
    <!-- ***** Products Area Ends ***** -->
    @Html.Partial("_FooterPartialView");
    @Html.Partial("_ScriptsPartialView");

</body>

</html>
